/**app.wxss**/
 @import "./wxParse/wxParse.wxss"; 
page {  
  display: block;  
  min-height: 100%;  
  background-color: #f5f5f5;
}  

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.head-top{
  width: 100%;
  height: 50px;
}

.head-top #back {
  width: 50px;
  height: 30px;
  margin: 10px;
}

/************progress view******************/
.self-view-area{
  margin-top: 0;
  height: 100rpx;
  width:100%;
  background-color:#ffffff;
  /*display:inline;*/
  display: flex;
  flex-direction:row;
}

.view-progress-bg{
    height: 22rpx;  
    width:580rpx;
    margin-top: 39rpx;
    margin-left: 70rpx;
    background-color:#f2f1f1;
    border-radius: 11rpx; 
    display: flex;
    flex-direction:row;
    overflow:visible;
}
.view-progress-con{
    height: 22rpx;
    width:500rpx;
    background-color:#ffa732;
    border-radius: 11rpx;
}
.view-progress-circle{
    height: 35rpx;
    width:35rpx;
    margin-left: -9rpx; 
    margin-top: -9rpx; 
    background-color:#ffa732;
    border: 1px solid #ffffff;
    border-radius: 50%;
    display: flex;
    flex-direction:column;
}


.self-view-area2{
  height: 100%;
  width:100%;
  background-color:#ffffff;
  /*display:inline;*/
  display: flex;
  flex-direction:row;
}

.view-progress-bg2{
    height: 22rpx;  
    width:100%;
    margin-top: 0rpx;
    margin-left: 0rpx;
    background-color:#f2f1f1;
    border-radius: 11rpx; 
    display: flex;
    flex-direction:row;
}

.view-progress-con2{
    height: 22rpx;
    background-color:#ffa732;
    border-radius: 11rpx;
}

.label-progress{
    text-align: center;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
}

#label-progress-left{

  height: 100%;
  /* width:100%; */
  /* margin-top: 5rpx;  */
  color: #fff;
  font-size: 25rpx;
  /* background-color:black; */
}
#label-progress-right{

  align-self:center;
  color: #666666;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.yellow-button{
  color:white;
  font-size: 30rpx;
  background-color:#ffa732;
}

.gray-button{
  color:gray;
  font-size: 30rpx;
  background-color: lightgray;
}