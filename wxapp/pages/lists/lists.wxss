/* lists.wxss */
.lists {
  height: 100%;
  width: 100%;
}

.list-item{
  width: 100% - 40px;
  margin-left: 40px;
  margin-top: 5px;
}

.list-item text{
  font-size: 10pt;
  color: lightblue;
}

#rate{
  font-size: 10pt;
  float: right;
}

.lists-tab{
  width: 100%;
  display: flex;
  flex-flow: row;
  font-size: 30rpx;
  color: #333333;
  justify-content: space-between;
  align-items: center
}

.lists-tab .normal {
  height: 100%;
  width: 33.33%;
  border-bottom: 1px solid #999;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-weight: 500;
}

.lists-tab .select {
  border-bottom: 4rpx solid #FFA732;
}

.lists-content {
  display: flex;
  flex-flow: row wrap;
  flex-direction:  row;
  justify-content: space-between;
  width: 100% - 60rpx;
  /* 根据底部按钮高度计算此高度 */
  padding-bottom: 320rpx; 
  margin: 30rpx;
}

.lists-item {
  margin-bottom: 40rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  box-shadow:-2rpx -2rpx 6rpx 6rpx #F2F2F2 inset;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  border: 1px solid #F2F2F2;
  background-size: 100% 100%;
  position: relative;
}

.lists-item-empty {
  margin-bottom: 40rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.list-item-select {
  position: relative;
  border: 1px #FFA732 solid;
}

.list-item-select image {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
/* 波浪形状背景 */
.lists-item #wave-bg {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  z-index: -1;
  width: 180rpx;
  height: 180rpx;
}
.lists-buttons {
  z-index: 900;
  width: 100%;
  height: 300rpx;
  padding-bottom: 20rpx;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-top: lightgray solid 1px;
}

.lists-buttons button{
  width: 600rpx;
  margin-top: 20rpx;
}