/* lists.wxss */
.lists {
  height: 100%;
  width: 100%;
}

.list-item{
  width: 100% - 40px;
  margin-left: 40px;
  margin-top: 5px;
}

.list-item text{
  font-size: 10pt;
  color: lightblue;
}

#rate{
  font-size: 10pt;
  float: right;
}

.lists-tab{
  width: 100% - 20px;
  margin: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  border-bottom: 1px solid black;
}

.lists-tab .normal {
  padding-top: 5px;
  padding-bottom: 5px;
  font-size: 14pt;
  height: 100%;
  width: 33%;
}

.lists-tab .select {
  border-bottom: 4px solid black;
}

.lists-content {
  display: flex;
  flex-flow: row wrap;
  flex-direction:  row;
  justify-content: space-between;
  width: 100% - 20px;
  /* 根据底部按钮高度计算此高度 */
  padding-bottom: 300rpx; 
  margin: 10px;
}

.lists-item {
  margin-bottom: 10px;
  width: 220rpx;
  height: 100rpx;
  border: 1px black solid;
}

.lists-item text {
  font-size: 12pt;
}

.lists-buttons {
  z-index: 900;
  background-color: lightblue;
  width: 100%;
  height: 300rpx;
  padding-bottom: 20rpx;
  position: fixed;
  bottom: 0px;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.lists-buttons button{
  width: 600rpx;
  margin-top: 20rpx;
}