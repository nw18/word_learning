<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <button id="main" bindtap="bindJumpTap">main</button>
    <button id="self-evaluation" bindtap="bindJumpTap">self-evaluation</button>
    <button id="learn_over" bindtap="bindJumpTap">learn_over</button>
    <button id="questions-practice" bindtap="bindJumpTap">questions-practice</button>
    <button id="logs" bindtap="bindJumpTap">logs</button>
    <button id="lists" bindtap="bindJumpTap">lists</button>
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
