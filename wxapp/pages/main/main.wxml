<!--main.wxml-->
<view class="main">
  <image src="/img/main-head.png" mode="widthFix" class="main-head"></image>
  <view class="main main-content1">
    <view class="main-sum" wx:if="{{learnProcess!=null}}">
      <view>
        <text class="desc">今天已学</text>
        <view><text class="number">{{learnProcess.TodayLearnedCount}}</text><text class="desc">个</text></view>
      </view>
      <view>
        <text class="desc">今天待学</text>
        <view><text class="number">{{learnProcess.TodayToLearnCount}}</text><text class="desc">个</text></view>
      </view>
      <view>
        <text class="desc">累计学习</text>
        <view><text class="number">{{learnProcess.SumLearnedDay}}</text><text class="desc">天</text></view>
      </view>
    </view>
    <view class="main-diver" />
    <view class="main-proc">
      <view>
        <text class="text1">学习进度</text>
        <text class="text3">{{learnProcess.LearnedCount}}</text>
        <text class="text2"> / {{learnProcess.SumWordCount}}</text>
        <text class="text1" id="book_info" bindtap="onClickBookInfo" wx:if="{{bookIndex >= 0}}">{{bookList[bookIndex].Name}}</text>
      </view>
      <progress wx:if="{{learnProcess!=null}}" percent="{{learnProcess.LearnedCount * 100.0 / learnProcess.SumWordCount}}" active activeColor="green" backgroundColor="light" />
    </view>
  </view>
  <image src="../../img/back-middle.png" style="width:690rpx;height:70rpx;margin-left:30rpx;margin-right:30rpx;"></image>
  <view class="main-content2">
    <view class="main-extra-buttons">
      <view bindtap="onClickBookInfo">
        <image src="../../img/icon-change-book.png"></image>换单词书</view>
      <view bindtap="onNavigateTo" data-url="../lists/lists">
        <image src="../../img/icon-word-list.png" data-url="../lists/lists"></image>单词列表</view>
      <view bindtap="onNavigateTo" data-url="../lists/collect">
        <image src="../../img/icon-collect-on.png" data-url="../lists/collect"></image>我的收藏</view>
    </view>
  </view>
  <button class="yellow-button" bindtap="onClickBegin">开始背单词吧</button>
  <block wx:if="{{showAD}}">
    <view id='ad'></view>
  </block>
  <!-- 选择书本的浮层  -->
  <block wx:if="{{bookList.length > 0}}">
    <view class="main-model-cover" wx:if="{{bookIndex < 0}}"></view>
    <view class="main-model-content" wx:if="{{bookIndex < 0}}">
      <view class="book-label" wx:for="{{bookList}}">
        <text>{{item.Name}}</text>
        <button bindtap="onBookChange" data-index="{{index}}">开始学习</button>
      </view>
    </view>
  </block>
</view>