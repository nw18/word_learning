}
#TotalNum{

  color: #999999;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.OrderStatus1{
    width:100%;
    display: flex;
    flex-direction: row;
}
.OrderBtn1{
  color: #999999;
  font-size: 32rpx;

  height: 50rpx;
