/************select btn******************/
.ques-btn-area{
  /*height: 600rpx;*/
  width:100%;
  padding-bottom: 100rpx;
  background-color:white;
  display:flex;
  flex-direction:column;

}
.sel-btn{
  margin-top: 40rpx;
  margin-left: 70rpx;
  width: 600rpx;
  padding: 20rpx; 
  border-radius: 11rpx; 
  display:flex;
  flex-direction:row; 
  color: #666666; 
  background-color: white;
}
.label-ques{
  width: 100%;
  display: flex;
  flex-flow: row;
  position: relative;
}

.label-ques view {
  margin-left: 5rpx;
}

.sel-btn image{
  width: 39rpx; 
  height: 26rpx;
  margin-top: 3rpx;
  margin-left: 100rpx; 
}
.sel-btn-nor{
  box-shadow:-2rpx -2rpx 6rpx 6rpx whitesmoke inset;
}
.sel-btn-true{
  border: 2px solid #47d8b3; 
  display:flex;
  flex-direction:row; 
  justify-content: space-between; 
}
.sel-btn-flase{
  border: 2px solid #fd6d55; 
  display:flex;
  flex-direction:row; 
  justify-content: space-between; 
}
.textMargin{
  font-size: 30rpx;
  position: absolute;
  right: 50rpx;
}

/************tian btn******************/
.ques-btn-tian{
  position: relative;
  width:100%;
  background-color: white;
  display:flex;
  flex-direction:column;
}

.answer-view{
  /* background-color: wheat; */  
