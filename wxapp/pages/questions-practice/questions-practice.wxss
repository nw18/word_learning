.questions-praction{
    height: 100%;
    width:100%;
    margin-top: 0rpx;
    background-color:beige;
    /*display:flex;*/
    /*flex-direction:row;*/
}

/************label content******************/

.ques-view-content {
  height: 10%;
  width:100%;
  display: flex;
  flex-direction: column;
  /*align-items: center;*/
  background-color:#1cc;
}
.ques-view-title{
   margin-left: 20rpx; 
   margin-top: 20rpx;
   height: 30rpx;
   align-self: flex-start;

}

.ques-view-address{
  margin-top: -30rpx;
  margin-right: 30rpx;
  align-self: flex-end;
}
.label-content{
    height: 90%;
    width:90%;
    border: 1px solid #ffffff;
    margin: 30rpx;
    align-self: flex-start;
}
/************select btn******************/
.ques-btn-area{

  /*height: 600rpx;*/
  height: 10%;
  width:100%;
  background-color:#6cc;
  display:flex;
  flex-direction:column;

}
.ques-btn-area button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 60%;
  height: 20%;

}

.sel-btn-nor{
  background-color: black;
  color: white;
}

.sel-btn-true{
   background-color: green;
  color: white;
}
.sel-btn-flase{
   background-color: red;
  color: white;
}
/************tian btn******************/
.ques-btn-tian{

  height: 100rpx;
  width:100%;
  background-color:#6cc;
  display:flex;
  flex-direction:column;

}
.ques-btn-tian button{

  width: 200rpx;
  height: 80%;

}
/************next btn******************/
.ques-btn-next{

  width: 100%;
  height: 100rpx;
  background-color:cyan;
  display:flex;
  flex-direction:column;
}

.ques-btn-next button{

  width: 300rpx;
  height: 80rpx;
  background-color:cyan;
  border: 1px solid #fff;

  margin-left: 20rpx;
  margin-top: 20rpx;
}