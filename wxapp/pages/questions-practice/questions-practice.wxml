<view class="questions-praction">

<view class="view-ques-head">
   <label id="label-progress-left" class="label-progress" >
        <text>{{progressNum}}</text>
   </label>

   <view class="view-progress">
       <progress percent="{{progressPercent}}"  active activeColor="green" backgroundColor="light" stroke-width="10"  />
   </view>

   <label id="label-progress-right" class="label-progress">
      <text>{{progressAll}}</text>
   </label>
</view>

<view  class="ques-view-content">

  <view class="ques-view-title">
    <text>"真题"</text>
  </view>
  <view class="ques-view-address">
    <text>{湖北黄石}</text>
  </view>
  <label id="label-content-id" class="label-content">
        <text>{{content}}</text>
  </label>
  
</view>
  
<view class="ques-btn-area" >
    <block wx:if="{{answer=='A'}}">
       <button class="sel-btn-true" bindtap="bindABtnTap" >AAAAAAAAA</button>
    </block>

    <block wx:elif="{{answer!='A'}}">
         <button class="sel-btn-flase"  bindtap="bindABtnTap" >AAAAAAAAA</button>
    </block>

    <block wx:if="{{answer=='B'}}">
       <button class="sel-btn-true"  bindtap="bindBBtnTap" >BBBBBB</button>
    </block>
    <block wx:elif="{{answer!='B'}}">
         <button class="sel-btn-flase"   bindtap="bindBBtnTap" >BBBBBB</button>
    </block>

    <block wx:if="{{answer=='C'}}">
       <button class="sel-btn-true" bindtap="bindCBtnTap" >CCCCCCCC</button>
    </block>
    <block wx:elif="{{answer!='C'}}">
         <button class="sel-btn-flase"  bindtap="bindCBtnTap" >CCCCCCCC</button>
    </block>

    <block wx:if="{{answer=='D'}}">
       <button class="sel-btn-true" bindtap="bindDBtnTap" >DDDDDDDD</button>
    </block>
    <block wx:elif="{{answer!='D'}}">
         <button class="sel-btn-flase" bindtap="bindDBtnTap" >DDDDDDDD</button>
    </block>


</view>


 <view class="ques-btn-next" >

    <button bindtap="bindNextBtnTap" type="primary" plain="true">下一题</button>

 </view>

</view>