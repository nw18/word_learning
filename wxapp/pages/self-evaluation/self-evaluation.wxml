<view class="self-evaluation">

<import src="../com/com.wxml"/>
<template is="progress-view" data="{{progressItem}}"></template> 

  <view   class="self-view-video">
    <image bindtap="bindImageViewTap" class="self-view-video-avatar" src="{{picture}}" background-size="cover" ></image>
  </view>

  <view class="self-btn-area" >
    <button  id="self-btn-left" bindtap="bindTrueBtnTap" >会</button>
    <button id="self-btn-right" bindtap="bindFalseBtnTap" >不会</button>
  </view>
</view>