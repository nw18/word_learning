<view class="self-evaluation">

<view class="self-view-area">
   <label id="label-progress-left" class="label-progress" >
        <text>{{progressNum}}</text>
   </label>

   <view class="view-progress">
       <progress percent="{{progressPercent}}"  active activeColor="green" backgroundColor="light" stroke-width="10"  />
   </view>

   <label id="label-progress-right" class="label-progress">
      <text>{{progressAll}}</text>
   </label>
</view>



  <view  bindtap="bindViewTap" class="self-view-video">
    <image class="self-view-video-avatar" src="{{picture}}" background-size="cover"></image>
    <text class="self-view-video-nickname">{{userInfo.nickName}}</text>
  </view>


  <view class="self-btn-area" >

    <button bindtap="bindTrueBtnTap" type="primary" plain="true">会</button>
    <button bindtap="bindFalseBtnTap" type="primary" plain="false">不会</button>

  </view>

</view>