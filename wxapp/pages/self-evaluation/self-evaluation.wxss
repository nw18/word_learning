.self-btn-area{

  height: 200rpx;
  width:100%;
  background-color:#6cc;
  display:flex;
  flex-direction:row;

}
.self-btn-area button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 200rpx;
  height: 100rpx;
  /*background-color:cyan;*/
  border: 1px solid #fff
}
