.self-evaluation{
    height: 100%;
    width:100%;
    background-color:#f5f5f5;
}
/************progress1******************/

.self-view-area{
  margin-top: 0;
  height: 100rpx;
  width:100%;
  background-color:#ffffff;
  /*display:inline;*/
  display: flex;
  flex-direction:row;

}

.view-progress-bg{
  
    height: 22rpx;  
    width:580rpx;
    margin-top: 39rpx;
    margin-left: 70rpx;
    background-color:#f2f1f1;
    border-radius: 11rpx; 
    display: flex;
    flex-direction:row;
}
.view-progress-con{
    height: 22rpx;
    width:500rpx;
    background-color:#ffa732;
    border-radius: 11rpx;
}
.view-progress-circle{

    height: 35rpx;
    width:35rpx;
    margin-left: -9rpx; 
    margin-top: -9rpx; 
    background-color:#ffa732;
    border: 1px solid #ffffff;
    border-radius: 50%;
    display: flex;
    flex-direction:column;
}
.label-progress{
    text-align: center;
}

#label-progress-left{

  height: 100%;
  width:100%;
  margin-top: 5rpx; 
  color: #fff;
  font-size: 30rpx;
  /* background-color:black; */
}
#label-progress-right{

  align-self:center;
  color: #666666;
  font-size: 30rpx;
  margin-left: 10rpx;
}
/************vodeo******************/

.self-view-video {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.self-view-video-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%; /*圆角*/
}
.self-view-video-nickname {
  color: #aaa;
}
