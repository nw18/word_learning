/* commod-detail.wxss */
.commod-detail{
    height: 100%;
    width:100%;
    background-color:#f5f5f5;
    display: flex;
    flex-direction: column;
    /* position: relative; */
}

.commodImage{
    width:100%;
    height: 600rpx;
    background-color:red;
    display: flex;
    flex-flow: row;
    align-items: center; 
    justify-content: center;
}
.commodImage image{
    height: 400rpx;
}
.commodLine{
     width:100%;
     height: 1rpx;
     background-color: #e5e5e5;
}

.commodName{
    width:100%;
    height: 210rpx;
    background-color: white;
}
.nameDetail{
  width:100%;
  height: 45%;
  padding-left: 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column; 
}
.nameDetail text{
  width: 670rpx;
  /* height: 10%; */
  /* background-color:blue; */
  word-break: break-all;
  color: #333;
  font-size: 36rpx;
}
.priceDetail{
  width:100%;
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content:space-between; 
}
.priceText{
  margin-left: 40rpx;
  color: #ff7430;
  font-size: 34rpx;
}
.priceNum{
  margin-right: 40rpx;
  color: #999999;
  font-size: 24rpx;
}

.commodDetail{
  width:100%;
  /* height: 700rpx; */
  background-color:#f5f5f5;
  padding-left: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 150rpx;
  display: flex;
  flex-direction: column; 
}
.commodDetail text{

  width: 670rpx;
  word-break: break-all;
  color: #666;
  font-size: 32rpx;

}
.commodBuyView{

  width:100%;
  height: 100rpx;
  background-color:#ffffff;
  z-index: 900;
  position: fixed;
  bottom: 0px;
   display: flex;
  flex-flow: row;
  /* align-items: center; */
  /* justify-content: center;   */
}

.buyViewTalk{
    width: 25%;
    display: flex;
    flex-flow: row;
    align-items: center; 
    justify-content: center;
}
.buyViewLine{
  width: 2rpx;
  height: 100%;
  background-color:#e5e5e5;
}
.buyViewColl{
    width: 25%;
    display: flex;
    flex-flow: row;
    align-items: center; 
    justify-content: center;
}

.buyViewAdd{
    width: 50%;
    background-color:#ff7430;
    color: white; 
    display: flex;
    flex-flow: row;
    align-items: center; 
    justify-content: center; 
}
