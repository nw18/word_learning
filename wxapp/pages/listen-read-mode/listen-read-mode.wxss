/* pages/listen_read_mode/listen_read_mode.wxss */
text {
  word-break: normal;
}

.listen_read_mode{
    width: 100%;
    min-height: 750rpx;
    height: 100% - 250rpx;
    background-color: #f5f5f5;
    padding-bottom: 10rpx;
}
/***********************Head**********************************/
.words-read{
  width:100% - 120rpx;
  display: flex;
  flex-direction: column;
  margin-top: 11rpx;
  background-color: white;
  padding-bottom: 40rpx; 
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.words-read-head{
  display: flex;
  flex-direction: row;
  height:100rpx;
  width:100%;
  background-color: white;
  align-items: center;
  position: relative;
}
.words-read-head text{
  color: #ffa732;
  font-size: 30rpx;
}

.words-read-head label{
  color: white;
  background-color: #ffa732;
  font-size: 24rpx;
  height: fit-content;
  width: fit-content;
  text-align: center;
  padding: 4rpx;
  margin-left: 20rpx;
}

.words-read-head image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
}
/***********************音标*********************************/
.words-read-yibiao{
  display: flex;
  flex-direction: row;
  height:80rpx;
  width:100%;
  background-color: white;
  align-items: center;
}
.words-read-yibiao label{

  color: #666666;
  /* background-color: #ffa732; */
  font-size: 26rpx;
  height: 30rpx;
  /* width: 130rpx; */
  text-align: center;
}
.words-read-yibiao image{
  width: 50rpx;
  height: 50rpx;
  padding: 5rpx;
  margin-left: 30rpx;
}
/***********************词性*********************************/
.words-read-cixing{
  color: #666666;
  margin-top: 20rpx;
  font-size: 26rpx;
  width:100%;
}
/***********************例句*********************************/
.ords-read-liju-logo{
  color: #2ab4fc;
  margin-top: 20rpx;
  font-size: 26rpx;
  height:fit-content;
  width: fit-content;
  padding: 5rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border: 1px solid #2ab4fc;
  border-radius: 10rpx;
  padding-top: 4rpx;
  text-align: center;
}
.ords-read-liju{
  color: #666666;
  margin-top: 20rpx;
  font-size: 26rpx;
  width:610rpx;
  padding-top: 1rpx;
  padding-bottom: 1rpx;
}
/***********************视频*********************************/
.ords-read-video-logo{
  color: #2ab4fc;
  margin-top: 20rpx;
  font-size: 26rpx;
  height:40rpx;
  width:180rpx;
  border: 1px solid #2ab4fc;
  border-radius: 10rpx;
  padding-top: 4rpx;
  text-align: center;
}

.ords-read-video{
  background-color: #fff;
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.ords-read-video video{
  width:610rpx;
}

/***********************下一个单词*********************************/
.auto-next{
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  background-color: #f5f5f5;
  width: 100%;
  bottom: 50rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}
.auto-next-button {
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: center;
  width: 670rpx;
  height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  border: 0px; 
  background-color:#ffa732;
  border-radius: 10rpx;
}
.auto-next navigator {
  margin-top: 20rpx;
}

.bottomest {
  display: block;
  width: 100%;
  height: 100%;
  z-index: 0;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}