<view class="listen_read_mode">

<import src="../com/com.wxml"/>
<template is="progress-view" data="{{progressItem}}"></template> 

  <!--单词描述-->
  <view class="words-read">
    <view class="words-read-head" >
      <text>{{"feel"}}</text>
      <label>核心词汇</label>
      <image  style="width: 50rpx; height: 50rpx; " src="../../img/laba.png" ></image>
    </view>
    <!--音标-->
    <view class="words-read-yibiao">
        <label> {{"[ˈsɜ:kjələ(r)]"}}</label>
        <image  style="width: 40rpx; height: 40rpx; " src="../../img/laba.png" ></image>
    </view>
   <!--词性 -->
    <block wx:key="unique" wx:for="{{cixing}}" wx:for-index="idx" wx:for-item="item">
        <view class="words-read-cixing"> {{item}}</view>
    </block>
    <!--例句-->
    <view class="ords-read-title-liju">例句</view>
    <view class="ords-read-liju">
        <text>{{ExtraList.liju}}</text>
    </view>

  </view>
  

  
  <!--帮助记忆-->
  <view class="words_help">
    
      <label id="example">例句</label>
      <text id="example_en">{{example-en}}</text>
      <text id="example_cn">{{example-cn}}</text>
        <label >丽丽助记</label>
     <image id="image_help"  src="../../img/auth-head.png" ></image>
  </view>
  <view class="auto-next">
      <button>
       <label>{{time}}</label><label>s下一个单词</label>
      </button>
  </view>
  </view>
  